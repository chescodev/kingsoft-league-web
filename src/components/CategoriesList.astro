---
import { type Categories } from '@/types/categories'

const res = await fetch('http://localhost:4321/api/categories.json')
const categories = (await res.json()) as Categories
---

<h2 class="uppercase px-2 py-1 text-3xl font-bold mb-8">Categor√≠as</h2>

<section class="grid grid-cols-1 justify-center sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 mb-8">
  {categories.rows.map(category => (
    <div class="flex justify-center">
      <div class="card w-[clamp(260px,80%,300px)] hover:brightness-90 transition-all cursor-pointer group bg-gradient-to-tl from-gray-900 to-gray-950 hover:from-gray-800 hover:to-gray-950 border-r-2 border-t-2 border-gray-900 rounded-lg overflow-hidden relative">
        <div class="px-8 py-10">
          <div class="bg-accent w-10 h-10 rounded-full rounded-tl-none mb-4 group-hover:-translate-y-1 group-hover:shadow-xl group-hover:shadow-red-900 transition-all"></div>
          <div class="uppercase font-bold text-xl">{category[1]}</div>
          <div class="text-gray-300 tracking-widest">Categoria</div>
          <div class="text-gray-400 mt-8">
            <p>{category[2]}</p>
          </div>
        </div>

        <div class="h-2 w-full bg-gradient-to-l via-accent group-hover:blur-xl blur-2xl m-auto rounded transition-all absolute bottom-0"></div>
        <div class="h-0.5 group-hover:w-full bg-gradient-to-l  via-accent group-hover:via-accent-dark w-[70%] m-auto rounded transition-all"></div>
      </div>
    </div>
  ))}
</section>

