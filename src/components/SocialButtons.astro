---
import InstagramIcon from '@/icons/Instagram.astro'
import XIcon from '@/icons/X.astro'
import FacebookIcon from '@/icons/Facebook.astro'
import WhatsappIcon from '@/icons/Whatsapp.astro'
---

<nav class:list={`${Astro.props.class}`}>
  <ul class="flex flex-row items-center gap-x-6" aria-label="redes sociales">
    <li>
      <a
        target="_blank"
        rel="noopener"
        aria-label="Facebook de Kingsoft, se abrirá en una nueva pestaña"
        href=""
        class="inline-block any-hover:scale-125 any-hover:opacity-70 motion-safe:transition motion-reduce:any-hover:scale-100"
      >
        <FacebookIcon
          class="text-primary transition-colors duration-300 hover:text-accent motion-reduce:duration-0"
        />
      </a>
    </li>
    <li>
      <a
        target="_blank"
        rel="noopener"
        aria-label="Whatsapp de Kingsoft, se abrirá en una nueva pestaña"
        href=""
        class="inline-block any-hover:scale-125 any-hover:opacity-70 motion-safe:transition motion-reduce:any-hover:scale-100"
      >
        <WhatsappIcon
          class="text-primary transition-colors duration-300 hover:text-accent motion-reduce:duration-0"
        />
      </a>
    </li>
    <li>
      <a
        target="_blank"
        rel="noopener"
        aria-label="Instagram de Kingsoft League, se abrirá en una nueva pestaña"
        href=""
        class="inline-block any-hover:scale-125 any-hover:opacity-70 motion-safe:transition motion-reduce:any-hover:scale-100"
      >
        <InstagramIcon
          class="text-primary transition-colors duration-300 hover:text-accent motion-reduce:duration-0"
        />
      </a>
    </li>
    <li>
      <a
        target="_blank"
        rel="noopener"
        aria-label="X de Kingsoft, se abrirá en una nueva pestaña"
        href=""
        class="inline-block any-hover:scale-125 any-hover:opacity-70 motion-safe:transition motion-reduce:any-hover:scale-100"
      >
        <XIcon
          class="text-primary transition-colors duration-300 hover:text-accent motion-reduce:duration-0"
        />
      </a>
    </li>
  </ul>
</nav>
